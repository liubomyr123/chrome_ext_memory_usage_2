{
    "manifest_version": 3,
    "name": "Chrome Memory Monitor",
    "version": "1.0",
    "description": "Monitor memory usage in real-time for any active tab.",
    "permissions": [
        "tabs",
        "storage",
        "debugger",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "host_permissions": [
        "*://*/*"
    ]
}